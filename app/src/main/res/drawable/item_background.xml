<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/item_activated_color" android:state_activated="true" />

    <item android:drawable="@color/item_pressed_color" android:state_pressed="true" />

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/material_blue_grey_900"></solid>
            <stroke android:width="2px" android:color="@color/item_activated_color"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>